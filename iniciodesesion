    <form id="auth-form">
      <div id="register-fields" style="display:none;">
        <input type="text" id="username" placeholder="Nombre de usuario" required><br>
        <input type="email" id="email" placeholder="Correo electrónico" required><br>
        <input type="date" id="dob" required><br>
      </div>
      <input type="password" id="password" placeholder="Contraseña" required><br>
      <button type="submit">Enviar</button>
    </form>
    <p id="toggle">¿No tienes cuenta? <a href="#" onclick="toggleForm()">Regístrate</a></p>
    <p><a href="#" onclick="forgotPassword()">¿Olvidaste tu contraseña?</a></p>
  </div>
