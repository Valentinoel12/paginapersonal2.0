/* script.js */
let isRegister = false;

function toggleForm() {
  isRegister = !isRegister;
  document.getElementById('form-title').innerText = isRegister ? 'Registrarse' : 'Iniciar Sesión';
  document.getElementById('register-fields').style.display = isRegister ? 'block' : 'none';
}

function forgotPassword() {
  const email = prompt("Introduce tu correo para recuperar la contraseña:");
  if (email) {
    fetch('/api/send-reset-code', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({email})
    }).then(res => alert("Si existe ese correo, se envió un código."));
  }
}

document.getElementById('auth-form').addEventListener('submit', async function(e) {
  e.preventDefault();

  const password = document.getElementById('password').value;

  if (isRegister) {
    const username = document.getElementById('username').value;
    const email = document.getElementById('email').value;
    const dob = document.getElementById('dob').value;

    const age = getAge(new Date(dob));
    const isMinor = age < 18;

    const res = await fetch('/api/register', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({username, email, dob, password, isMinor})
    });

    alert('Registrado. Ahora puedes iniciar sesión.');
    toggleForm();
  } else {
    // login
    const res = await fetch('/api/login', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({password}) // normalmente también se pide email o user
    });

    if (res.ok) {
      alert('Sesión iniciada');
    } else {
      alert('Credenciales incorrectas');
    }
  }
});

function getAge(dob) {
  const today = new Date();
  let age = today.getFullYear() - dob.getFullYear();
  const m = today.getMonth() - dob.getMonth();
  if (m < 0 || (m === 0 && today.getDate() < dob.getDate())) {
    age--;
  }
  return age;
}
